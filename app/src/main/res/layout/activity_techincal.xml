<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical"
    tools:context="com.mostafa.android.bsor3a.Techincal.TechincalActivity">

    <RelativeLayout style="@style/pageRelativeStyle">

        <ImageView
            android:id="@+id/backLogin"
            style="@style/pageTitleIcon"
            android:onClick="back" />

        <TextView
            android:id="@+id/TitleLogin"
            style="@style/pageTitleText"
            android:text="@string/Technical_support" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/ContactTheCompany"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Thefollowingnumbers"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/Orange" />

            <TextView
                android:id="@+id/firstNumber"

                style="@style/editText1"
                android:onClick="call"
                android:text="000 000 000" />

            <TextView
                android:id="@+id/secondNumber"
                style="@style/editText1"
                android:onClick="call"
                android:text="000 000 000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OrWithEmail"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/Orange" />

            <TextView
                android:id="@+id/Technical_email"
                style="@style/editText1"
                android:onClick="email"
                android:text="info@bsor3a.com" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/VisitWebsite"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/Orange" />

            <TextView
                android:id="@+id/WebSite"
                style="@style/editText1"
                android:onClick="website"
                android:text="www.bsor3a.com" />

            <LinearLayout
                android:id="@+id/socialMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/google"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="plus"
                    android:src="@drawable/plus" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="facebook"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="twitter"
                    android:src="@drawable/twitter" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
