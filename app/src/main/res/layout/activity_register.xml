<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context="com.mostafa.android.bsor3a.LoginAndRegister.RegisterActivity">

    <RelativeLayout
        android:id="@+id/head"
        style="@style/pageRelativeStyle2"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backLogin"
            style="@style/pageTitleIcon"
            android:onClick="back" />

        <TextView
            android:id="@+id/TitleLogin"
            style="@style/pageTitleText"
            android:text="@string/Register" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/fullname"
                style="@style/editText"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="20dp"
                android:hint="@string/FullName" />

            <EditText
                android:id="@+id/phone"
                style="@style/editText"
                android:drawableLeft="@drawable/mob"
                android:drawablePadding="20dp"
                android:hint="@string/Phone"
                android:inputType="number"
                android:maxLength="11" />

            <EditText
                android:id="@+id/email"
                style="@style/editText"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="20dp"
                android:hint="@string/Email"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/shortname"
                style="@style/editText"
                android:drawableLeft="@drawable/nname"
                android:drawablePadding="20dp"
                android:hint="@string/ShortName" />

            <EditText
                android:id="@+id/password"
                style="@style/editText"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="20dp"
                android:hint="@string/Password"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/EditReGovernoateid"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/Governorate" />

            <EditText
                android:id="@+id/EditReStateid"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/Statename" />

            <EditText
                android:id="@+id/EditReStreetName"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/streetName" />

            <EditText
                android:id="@+id/EditRebuilding_number"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/building_number" />

            <EditText
                android:id="@+id/EditReFlower_number"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/flower_number" />

            <EditText
                android:id="@+id/EditReFlat_number"
                style="@style/editText"
                android:drawableLeft="@drawable/home"
                android:drawableTint="@color/Orange"
                android:drawablePadding="20dp"
                android:hint="@string/flat_number" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/CBAccecpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="openTerms"
                    android:text="@string/AcceptTerms" />
            </LinearLayout>

            <Button
                android:id="@+id/Register"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gridentcolor"
                android:padding="10dp"
                android:text="@string/Register"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>