<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context="com.mostafa.android.bsor3a.FullShippmentActivity">

    <RelativeLayout
        android:id="@+id/relative"
        style="@style/pageRelativeStyle2">

        <ImageView
            android:id="@+id/backLogin"
            style="@style/pageTitleIcon"
            android:onClick="back" />

        <TextView
            android:id="@+id/TitleLogin"
            style="@style/pageTitleText"
            android:text="@string/ShippingDetalis" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/EditTextShippingName"
                style="@style/editText"
                android:drawableLeft="@drawable/person"
                android:hint="@string/ShippingName"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typefaceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/PleaseEnglish"

                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Spinner
                android:id="@+id/EditTextGovernorate"
                style="@style/editText"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:prompt="@string/Governorate"
                android:textColorHint="@color/Orange" />

            <Spinner

                android:id="@+id/EditTextDistrict"
                style="@style/editText"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:prompt="@string/Governorate"
                android:textColorHint="@color/Orange" />

            <EditText
                android:id="@+id/EditTextStreet"
                style="@style/editText"
                android:hint="@string/street"
                android:maxLines="1"

                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EditTextHouseNumber"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />

                    <EditText
                        android:id="@+id/EditTextStorey"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />

                    <EditText
                        android:id="@+id/EditTextApartmentNumber"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/HouseNumber"
                        android:textAppearance="?android:textAppearanceSmall"

                        android:textColor="@color/Orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Storey"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/Orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Apartmentnumber"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/Orange" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/promo"
                style="@style/editText"
                android:hint="@string/Promocode"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#808080"
                android:textColorHint="@color/Orange" />


            <EditText
                android:id="@+id/EditTextToShippingName"
                style="@style/editText"
                android:drawableLeft="@drawable/person"
                android:hint="@string/ShippingReciverName"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Orange" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"

                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/typefaceText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/PleaseEnglisha"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Spinner
                android:id="@+id/EditTextToGovernorate"
                style="@style/editText"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:prompt="@string/Governorate"
                android:textColorHint="@color/Orange" />

            <Spinner

                android:id="@+id/EditTextToDistrict"
                style="@style/editText"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:prompt="@string/Governorate"
                android:textColorHint="@color/Orange" />

            <EditText
                android:id="@+id/EditTextToStreet"
                style="@style/editText"
                android:hint="@string/street"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Orange" />

            <EditText
                android:id="@+id/EditTextToPhone"
                style="@style/editText"
                android:hint="@string/Phone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/EditTextToHouseNumber"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />

                    <EditText
                        android:id="@+id/EditTextToStorey"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />

                    <EditText
                        android:id="@+id/EditTextToApartmentNumber"
                        style="@style/SimpleeditText"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:hint="-- --"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColorHint="@color/Orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/HouseNumber"
                        android:textAppearance="?android:textAppearanceSmall"

                        android:textColor="@color/Orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Storey"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/Orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Apartmentnumber"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/Orange" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ButtonRShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gridentcolor"
                android:text="@string/getLocationofsender"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ButtonToShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gridentcolor"
                android:text="@string/getLocationofreceiver"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ButtonFinishShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gridentcolor"
                android:text="@string/SendTheRequest"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>
